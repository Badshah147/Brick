<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#451C6D"
    tools:context="com.bricks_klin.brickmanagment.Login">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="15dp"
        android:text="لاگ ان کریں"

        android:textSize="30sp"
        android:textColor="@android:color/white"
        />
    <EditText
        android:id="@+id/edtphno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:hint=" موبائل نمبر درج کریں"
        android:inputType="phone"
        android:maxLength="12"
        android:textColorHint="@android:color/white" />

    <EditText
        android:id="@+id/edtpas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtphno"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_keyboard_black_24dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:hint="پاس ورڈ درج کریں "
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtpas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="داخل"
        android:background="@color/colorAccent"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="اپنے آپ کو رجسٹر کریں!"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

</RelativeLayout>
