<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#451C6D"
    tools:context="com.bricks_klin.brickmanagment.AddEmployee">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:text="ملازم کو شامل کریں"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/spinnerklin"
        ></Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="22dp"
                android:text=":نام لکھیں"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:id="@+id/edtemp_name"
                android:layout_marginTop="11dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:backgroundTint="#ffffff"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"
                android:maxLength="20"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="22dp"
                android:text=":عمر"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="11dp"
                android:id="@+id/edtemp_age"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:backgroundTint="#ffffff"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:maxLength="2" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="22dp"
                android:text=":سیل نمبر"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="11dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/edtemp_cell"
                android:backgroundTint="#ffffff"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:maxLength="11" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="22dp"
                android:text=":تنخواہ"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="11dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/edtemp_salary"
                android:backgroundTint="#ffffff"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:maxLength="6" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="22dp"
                android:text=":پتہ"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>

            <EditText
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="11dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/edtemp_addr"
                android:backgroundTint="#ffffff"
                android:textColor="@android:color/white"
                android:maxLength="20" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnadd_emp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:text="شامل کریں"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</LinearLayout>
