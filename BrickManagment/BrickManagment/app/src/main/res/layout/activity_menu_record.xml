<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorBlue"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context="com.bricks_klin.brickmanagment.MenuRecord">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp"
            android:text="مینو کا انتخاب کریں"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="ملازم دیکھیں"
                android:id="@+id/tvmenuemp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:background="@color/colorAccent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="اینٹوں اسٹاک"
                android:id="@+id/tvmenubricks"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:background="@color/colorAccent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="فروخت"
                android:id="@+id/tvmenusales"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:background="@color/colorAccent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:text="خریداری"
                android:id="@+id/tvmenupurchases"
                android:textStyle="bold"
                android:textSize="16dp"
                android:background="@color/colorAccent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="خام مال"
                android:id="@+id/tvmenurawmat"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:background="@color/colorAccent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="kachi eent"
                android:id="@+id/tvmenukachibricks"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="16dp"
                android:background="@color/colorAccent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="موسم کا حال"
                android:id="@+id/tvmenuweather"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:background="@color/colorAccent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="حاضری شامل کریں"
                android:id="@+id/tvaddattendance"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:background="@color/colorAccent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="حاضری دیکھیں"
                android:id="@+id/tvviewattendance"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:background="@color/colorAccent"
                />
        </LinearLayout>
    </LinearLayout>


</ScrollView>